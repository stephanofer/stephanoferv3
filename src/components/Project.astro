---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
}

const { title, description, image, link } = Astro.props;
---

<div class="container">
    <h3>{title}</h3>
    <span>{description}</span>
    <img src={image} alt={title} />
    <a href={link} target="_blank">Ver proyecto</a>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>