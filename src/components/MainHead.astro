---
import "@/styles/global.css";
import { SEO } from "astro-seo";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;

const url = "https://stephanofer.com";
---

<meta charset="utf-8" />

<SEO
  title={title}
  description={description}
  extend={{
    meta: [
      { name: "viewport", content: "width=device-width, initial-scale=1.0" },
      { name: "author", content: "Stephano Fernandez" },
      {
        name: "keywords",
        content:
          "Desarrollador web, Desarrolador Fullstack, Stephano, Fernandez, Stephano Fernandez, NestJS, Astro, Angular",
      },
    ],
    link: [{ rel: "icon", type: "image/svg+xml", href: "favicon.svg" }],
  }}
  openGraph={{
    basic: {
      title: title,
      type: "website",
      image: "/opengraph.webp",
    },
    optional: {
      description: description,
    },
  }}
  twitter={{
    card: "summary_large_image",
    site: "@stephanofer",
    creator: "@stephanofer",
    title: title,
    description: description,
    image: "/opengraph.webp",
  }}
/>

<link
  rel="preload"
  href="/fonts/inter.woff2"
  as="font"
  type="font/woff2"
  crossorigin="anonymous"
/>
<link
  rel="preload"
  href="/fonts/clash.woff2"
  as="font"
  type="font/woff2"
  crossorigin="anonymous"
/>

<style is:inline>
  @font-face {
    font-family: "Inter";
    font-style: normal;
    font-weight: 100 900;
    font-display: swap;
    src: url("/fonts/inter.woff2") format("woff2");
  }

  @font-face {
    font-family: "Clash";
    font-style: normal;
    font-weight: 100 900;
    font-display: swap;
    src: url("/fonts/clash.woff2") format("woff2");
  }

  *,
  *::after,
  *::before {
    box-sizing: border-box;
    margin: 0;
  }

  :root {
    color-scheme: light dark;
    --fs-sm: clamp(0.8rem, -0.09vi + 0.82rem, 0.75rem);
    --fs-base: clamp(1rem, 0vi + 1rem, 1rem);
    --fs-md: clamp(1.2rem, 0.15vi + 1.21rem, 1.33rem);
    --fs-lg: clamp(1.56rem, 0.39vi + 1.47rem, 1.78rem);
    --fs-xl: clamp(1.95rem, 0.76vi + 1.76rem, 2.37rem);
    --fs-xxl: clamp(2.44rem, 1.3vi + 2.12rem, 3.16rem);
    --fs-xxxl: clamp(3.05rem, 2.1vi + 2.53rem, 6.21rem);
    --background: #000;
    --foreground: #000;
    --primary: #7ee081;
    --color-text: #767676;
  }

  html,
  body {
    background: var(--background);
    font-family: "Inter", sans-serif;
    margin: 0;
    width: 100%;
    height: 100%;
    scroll-behavior: smooth;
  }

  @media (prefers-reduced-motion) {
    html,
    body {
      scroll-behavior: auto;
    }
  }

  a {
    text-decoration: none;
    color: white;
  }

  li {
    list-style-type: none;
    padding: 0;
  }

  ul {
    padding: 0;
  }
</style>

