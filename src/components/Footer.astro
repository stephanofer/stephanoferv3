<style>
  .footer {
    background: #111;
    border-top: 1px solid #333;
    padding: 3rem 0 1rem;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-title {
    font-family: "Clash", sans-serif;
    font-size: var(--fs-lg);
    font-weight: 600;
    color: var(--primary);
    margin: 0;
  }

  .footer-description {
    color: #999;
    font-size: var(--fs-sm);
    line-height: 1.5;
    margin: 0;
  }

  .footer-nav {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .footer-nav-section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-nav-title {
    font-family: "Clash", sans-serif;
    font-size: var(--fs-base);
    font-weight: 600;
    color: #fff;
    margin: 0;
  }

  .footer-nav-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link {
    color: #999;
    font-size: var(--fs-sm);
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--primary);
  }

  .footer-social {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: #222;
    border-radius: 8px;
    color: #999;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: var(--primary);
    color: #000;
    transform: translateY(-2px);
  }

  .footer-bottom {
    border-top: 1px solid #333;
    padding-top: 1.5rem;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    color: #666;
    font-size: var(--fs-sm);
    margin: 0;
  }

  .footer-legal {
    display: flex;
    gap: 1.5rem;
  }

  .footer-legal-link {
    color: #666;
    font-size: var(--fs-sm);
    transition: color 0.2s ease;
  }

  .footer-legal-link:hover {
    color: var(--primary);
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .footer-nav {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .social-links {
      justify-content: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-legal {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer {
      padding: 2rem 0 1rem;
    }

    .footer-container {
      padding: 0 0.75rem;
    }

    .footer-main {
      gap: 1.5rem;
    }
  }
</style>
