---
import Link from "@/components/Link.astro";
import Email from "@/icons/email.svg";
import Github from "@/icons/github.svg";
import Linkedin from "@/icons/linkedin.svg";
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-brand">
      <a href="/" class="logo" aria-label="Stephano Fernandez - Ir al inicio">
        <span class="logo-name">Stephano Fernandez</span>
        <span class="logo-description">Desarrollador Web Full-Stack</span>
      </a>
    </div>

    <div class="footer-social">
      <div class="titles">
        <p class="footer-nav-title">Hagamos juntos tu pr√≥ximo proyecto</p>
        <a href="mailto:stephano.fernandez.03@gmail.com" class="email">stephano.fernandez.03@gmail.com</a>
      </div>
      <nav class="socials" aria-label="Redes sociales">
        <Link style="transparent" aria-label="Visitar perfil de GitHub de Stephano Fernandez" href="https://github.com/stephanofer">
          <Github width={24} height={24} aria-hidden="true" />
        </Link>
        <Link style="transparent" aria-label="Visitar perfil de LinkedIn de Stephano Fernandez" href="https://linkedin.com/in/stephanofer">
          <Linkedin width={24} height={24} aria-hidden="true" />
        </Link>
        <Link style="transparent" aria-label="Enviar correo a Stephano Fernandez" href="mailto:stephano.fernandez.03@gmail.com">
          <Email width={24} height={24} aria-hidden="true" />
        </Link>
      </nav>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #000;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .footer-container {
    display: flex;
    justify-content: space-between;
    width: 100%;
    max-width: 90rem;
    padding: 1.5rem;
  }

  .logo-name {
    font-family: "Clash";
    font-weight: 600;
    font-size: 1.5rem;
    line-height: 1.5rem;
    display: block;
    color: white;
  }

  span {
    color: var(--color-text);
  }

  .logo-description {
    font-size: var(--fs-sm);
  }

  a {
    color: white;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.75rem;
  }

  .footer-social {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .footer-nav-title {
    font-size: var(--fs-md);
    font-family: "Clash";
    font-weight: 500;
    color: white;
    margin: 0;
  }

  .email {
    display: block;
    text-align: center;
    font-size: var(--fs-base);
    color: var(--color-text);
  }

  .email:hover {
    color: var(--primary);
  }

  .socials {
    display: flex;
    gap: 1rem;
  }

  @media (width <= 768px) {
    .footer-container {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

    .footer-brand {
      align-items: center;
    }

    .footer-nav-title {
      font-size: var(--fs-base);
    }

    .email {
      font-size: var(--fs-sm);
    }
  }
</style>
