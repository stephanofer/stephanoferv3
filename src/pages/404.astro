---
import Layout from '@/layouts/Layout.astro';
import Link from '@/components/Link.astro';

import ArrowLeft from '@/icons/arrow-up-left.svg';
import Bag from '@/icons/bag.svg';

const title = "Página No Encontrada - 404";
const description = "¡Ups! La página que buscas no existe.";
---

<Layout title={title} description={description}>
  <main class="error-page">
    <div class="error-container">
      <!-- Animated 404 number -->
      <div class="error-number">
        <span class="digit" data-digit="4">4</span>
        <span class="digit" data-digit="0">0</span>
        <span class="digit" data-digit="4">4</span>
      </div>

      <!-- Main error message -->
      <div class="error-content">
        <h1 class="error-title">Página No Encontrada</h1>
        <p class="error-description">
          ¡Ups! Parece que te has aventurado en el desierto digital. 
          La página que buscas se ha ido de exploración.
        </p>
      </div>

      <!-- Interactive elements -->
      <div class="error-actions">
        <div class="action-buttons">
          <Link href="/" target="_self">
            <ArrowLeft slot="icon-left"/>
            ¡Volver al Inicio!
          </Link>
          <Link href="/#projects" style="transparent" target="_self">
            ¡Últimos Proyectos!
            <Bag slot="icon-right"/>
          </Link>
        </div>


      </div>

      <!-- Floating elements for visual interest -->
      <div class="floating-elements">
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
        <div class="floating-shape shape-4"></div>
      </div>
    </div>
  </main>

